version: '3.2'

services:
  related_info:
    build: .
    depends_on:
      - 'mysql'
    ports:
      - '3002:3002'

  mysql:
    image: mysql:latest
    command: --default-authentication-plugin=mysql_native_password
    restart: always
    environment:
      MYSQL_USER: student
      MYSQL_PASSWORD: student
      MYSQL_ROOT_PASSWORD: p@ssw0rd
      MYSQL_DATABASE: adidas
    volumes:
      - type: bind
        source: ./seed
        target: /tmp
